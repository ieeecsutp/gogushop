<script>
  // Slide data
  const slides = [
    {
      id: 1,
      title: 'Gogushop Music',
      subtitle: 'Tu destino para lo mejor de',
      highlight: 'K-Pop Corea del Sur',
      description: 'Los 치lbumes m치s exclusivos de K-Pop directo desde Corea del Sur. Descubre la m칰sica que est치 conquistando el mundo.',
      artist: 'Colecci칩n Premium'
    },
    {
      id: 2,
      title: 'Colecci칩n Exclusiva',
      subtitle: '츼lbumes limitados de',
      highlight: 'Tus Grupos Favoritos',
      description: 'BTS, ENHYPEN, TXT, TWICE, IVE, LE SSERAFIM y m치s. Ediciones especiales que no encontrar치s en ning칰n otro lugar.',
      artist: 'Ediciones Limitadas'
    },
    {
      id: 3,
      title: 'Experiencia K-Pop',
      subtitle: 'Vive la m칰sica como',
      highlight: 'Nunca Antes',
      description: 'Photocards exclusivas, p칩sters firmados y mercanc칤a oficial. La experiencia K-Pop completa en tu hogar.',
      artist: 'Mercanc칤a Oficial'
    }
  ];

  let currentSlide = 0;
  let isAutoPlaying = true;
  let isAudioPlaying = false;
  let autoPlayInterval: number;

  // Elements
  const slideBackgrounds = document.querySelectorAll('.slide-bg');
  const slideTitle = document.querySelector('.slide-title');
  const slideSubtitle = document.querySelector('.slide-subtitle');
  const slideHighlight = document.querySelector('.slide-highlight');
  const slideDescription = document.querySelector('.slide-description');
  const slideArtist = document.querySelector('.slide-artist');
  const indicators = document.querySelectorAll('.slide-indicator');
  const prevBtn = document.getElementById('prevSlide');
  const nextBtn = document.getElementById('nextSlide');
  const audioToggle = document.getElementById('audioToggle');
  const audioIcon = audioToggle?.querySelector('.audio-icon');
  const audioText = audioToggle?.querySelector('.audio-text');

  // Update slide content
  function updateSlideContent() {
    const slide = slides[currentSlide];
    
    if (slideTitle) slideTitle.textContent = slide.title;
    if (slideSubtitle) slideSubtitle.textContent = slide.subtitle;
    if (slideHighlight) slideHighlight.textContent = slide.highlight;
    if (slideDescription) slideDescription.textContent = slide.description;
    if (slideArtist) slideArtist.textContent = slide.artist;

    // Update backgrounds
    slideBackgrounds.forEach((bg, index) => {
      if (index === currentSlide) {
        bg.classList.remove('opacity-0');
        bg.classList.add('opacity-100');
      } else {
        bg.classList.remove('opacity-100');
        bg.classList.add('opacity-0');
      }
    });

    // Update indicators
    indicators.forEach((indicator, index) => {
      if (index === currentSlide) {
        indicator.classList.add('bg-white', 'scale-125');
        indicator.classList.remove('bg-white/50');
      } else {
        indicator.classList.remove('bg-white', 'scale-125');
        indicator.classList.add('bg-white/50');
      }
    });
  }

  // Navigation functions
  function goToSlide(index: number) {
    currentSlide = index;
    updateSlideContent();
    resetAutoPlay();
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % slides.length;
    updateSlideContent();
    resetAutoPlay();
  }

  function prevSlide() {
    currentSlide = (currentSlide - 1 + slides.length) % slides.length;
    updateSlideContent();
    resetAutoPlay();
  }

  function resetAutoPlay() {
    isAutoPlaying = false;
    clearInterval(autoPlayInterval);
    setTimeout(() => {
      isAutoPlaying = true;
      startAutoPlay();
    }, 3000);
  }

  function startAutoPlay() {
    if (autoPlayInterval) clearInterval(autoPlayInterval);
    autoPlayInterval = setInterval(() => {
      if (isAutoPlaying) {
        currentSlide = (currentSlide + 1) % slides.length;
        updateSlideContent();
      }
    }, 5000);
  }

  function toggleAudio() {
    isAudioPlaying = !isAudioPlaying;
    
    if (audioIcon && audioText) {
      if (isAudioPlaying) {
        audioIcon.innerHTML = '<polygon points="6 4 10 4 10 20 6 20 6 4"/><rect width="4" height="16" x="14" y="4"/>';
        audioText.textContent = 'Pausar Preview';
      } else {
        audioIcon.innerHTML = '<polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"/><path d="M15.54 8.46a5 5 0 0 1 0 7.07"/><path d="M19.07 4.93a10 10 0 0 1 0 14.14"/>';
        audioText.textContent = 'Preview Musical';
      }
    }
  }

  // Event listeners
  prevBtn?.addEventListener('click', prevSlide);
  nextBtn?.addEventListener('click', nextSlide);
  audioToggle?.addEventListener('click', toggleAudio);

  indicators.forEach((indicator, index) => {
    indicator.addEventListener('click', () => goToSlide(index));
  });

  // Start autoplay
  startAutoPlay();
</script>

