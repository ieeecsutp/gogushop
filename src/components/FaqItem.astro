---
interface Props {
    icon: string;
    tag: string;
    tagColor?: string;
    gradient?: string;
    question: string;
    answer: string;
}

const {
    icon,
    tag,
    tagColor = "#7b30fc",
    gradient = "from-[#7b30fc] to-[#17aed4]",
    question,
    answer,
} = Astro.props;
---

<div
    class="faq-item max-w-4xl mx-auto bg-white border border-violet-100 rounded-2xl shadow-sm p-6 text-left transition-all duration-300 cursor-pointer mt-6"
>
    <div class="flex items-start gap-4 faq-header">
        <div
            class={`w-12 h-12 rounded-xl bg-gradient-to-r ${gradient} flex items-center justify-center flex-shrink-0`}
        >
            <img src={icon} alt={tag} class="w-6 h-6 brightness-0 invert" />
        </div>

        <div class="flex-1">
            <span
                class="inline-block text-xs font-semibold rounded-full px-3 py-1 mb-2"
                style={`background-color:${tagColor}15; color:${tagColor}`}
            >
                {tag}
            </span>

            <div class="flex items-center justify-between select-none">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">
                    {question}
                </h3>

                <!-- Icono chevron -->
                <svg
                    class="faq-icon w-5 h-5 text-gray-400 transform transition-transform duration-300"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M19 9l-7 7-7-7"></path>
                </svg>
            </div>

            <!-- Contenido -->
            <div
                class="faq-content overflow-hidden transition-all duration-500 max-h-0"
            >
                <p class="text-gray-600 leading-relaxed mt-2">{answer}</p>
            </div>
        </div>
    </div>
</div>
