      font-size: 18px;
      padding: 8px 0;
      position: relative;
      transition: color 0.3s ease;
    }

    .nav-links a::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 50%;
      width: 0;
      height: 3px;
      background: linear-gradient(90deg, #b57cff, #6ec6db);
      border-radius: 6px;
      transition: all 0.3s ease;
      transform: translateX(-50%);
    }

    .nav-links a:hover::after {
      width: 100%;
    }

    .nav-links a.active::after {
      width: 100%;
    }

    .nav-links a.active {
      color: #6c63ff;
    }

    .nav-actions {
      display: flex;
      gap: 12px;
      align-items: center;
    }
