<nav class="site-nav" role="navigation" aria-label="Main navigation">
  <div class="nav-inner">
    <a class="brand" href="#inicio">
      <span class="brand-icon" aria-hidden="true"></span>
      <div class="brand-text">
        <span class="brand-title">Gogushop <strong>Music</strong></span>
        <span class="brand-sub">K-Pop Store</span>
      </div>
    </a>

    <ul class="nav-links" role="menubar">
      <li role="none"><a role="menuitem" href="#inicio" class="active">Inicio</a></li>
      <li role="none"><a role="menuitem" href="#albums">Álbumes</a></li>
      <li role="none"><a role="menuitem" href="#fans">Fans</a></li>
      <li role="none"><a role="menuitem" href="#faq">FAQ</a></li>
    </ul>

    <div class="nav-actions">
      <button class="cart" aria-label="Carrito">
        <span class="cart-icon" aria-hidden="true"></span>
        <span class="badge">0</span>
      </button>

      <button class="menu-toggle" aria-label="Abrir menú" type="button">
        <span></span><span></span><span></span>
      </button>
    </div>
  </div>

  <div class="mobile-overlay" role="dialog" aria-hidden="true">
    <ul class="mobile-links">
      <li><a href="#inicio">Inicio</a></li>
      <li><a href="#albums">Álbumes</a></li>
      <li><a href="#fans">Fans</a></li>
      <li><a href="#faq">FAQ</a></li>
    </ul>
  </div>

  <script>
    (function(){
      const nav = document.querySelector('.site-nav');
      const toggle = nav?.querySelector('.menu-toggle');
      const overlay = nav?.querySelector('.mobile-overlay');
      const anchorLinks = nav?.querySelectorAll('a[href^="#"]') || [];

      if (!nav || !toggle || !overlay) return;

      toggle.addEventListener('click', () => {
        nav.classList.toggle('open');
        overlay.setAttribute('aria-hidden', nav.classList.contains('open') ? 'false' : 'true');
      });

      // Smooth scroll behavior for in-page sections. If the section is not on current page,
      // navigate to root + hash so server will land user on index with hash.
      anchorLinks.forEach(a => {
        a.addEventListener('click', (e) => {
          const href = a.getAttribute('href');
          if (!href || !href.startsWith('#')) return;
          e.preventDefault();
          const id = href.slice(1);
          const target = document.getElementById(id);

          // close mobile menu
          nav.classList.remove('open');
          overlay.setAttribute('aria-hidden', 'true');

          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
            // update URL without reloading
            history.replaceState(null, '', '#' + id);
          } else {
            // if not on root, navigate to root + hash to let index handle it
            const isRoot = location.pathname === '/' || /index(\.html)?$/.test(location.pathname);
            if (!isRoot) {
              location.href = '/' + href;
            } else {
              // fallback: set hash
              location.hash = href;
            }
          }
        });
      });

      // close overlay when a mobile link (anchor) is clicked (already handled above),
      // also close when clicking outside overlay on mobile
      document.addEventListener('click', (ev) => {
        if (!nav.classList.contains('open')) return;
        const within = ev.target && nav.contains(ev.target as Node);
        if (!within) {
          nav.classList.remove('open');
          overlay.setAttribute('aria-hidden', 'true');
        }
      });
    })();
  </script>

<style is:inline>

.site-nav {
  background: linear-gradient(180deg, rgba(255,255,255,0.95), rgba(250,246,246,0.95));
  position: sticky;
  top: 0;
  z-index: 60;
  box-shadow: 0 1px 0 rgba(0,0,0,0.02);
  padding: 10px 18px;
  font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
}

.nav-inner {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  gap: 24px;
  justify-content: space-between;
}

.brand {
  display: flex;
  gap: 12px;
  align-items: center;
  text-decoration: none;
  color: #222;
}
.brand-icon {
  width: 56px;
  height: 56px;
  border-radius: 50%;
  background: radial-gradient(circle at 30% 30%, #ff8fb0, #6cc0ff 60%, #b28cff 100%);
  display: inline-block;
  box-shadow: 0 2px 6px rgba(120,0,180,0.08);
  flex-shrink: 0;
  position: relative;
  border: 3px solid rgba(255,255,255,0.5);
}
.brand-text { line-height: 1; }
.brand-title {
  font-size: 22px;
  font-weight: 700;
  background: linear-gradient(90deg,#b57cff,#6ec6db);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  display: block;
}
.brand-title strong { font-weight: 800; }
.brand-sub { display:block; font-size: 12px; color:#8b8b8b; }

.nav-links {
  display: flex;
  gap: 40px;
  list-style: none;
  margin: 0;
  padding: 0;
}
.nav-links a {
  color: #222;
  text-decoration: none;
  font-size: 18px;
  padding: 8px 0;
  transition: color .18s ease;
}
.nav-links a.active { color: #6c63ff; position: relative; }
.nav-links a.active::after {
  content: "";
  display:block;
  height:4px;
  width:28px;
  background:#7a6cff;
  border-radius:8px;
  margin-top:6px;
}

.nav-actions { display:flex; gap:12px; align-items:center; }
.cart {
  position: relative;
  background: transparent;
  border: 1px solid rgba(120,80,220,0.25);
  padding: 10px;
  border-radius: 12px;
  cursor: pointer;
}
.cart-icon {
  width: 22px;
  height: 22px;
  display:inline-block;
  background: conic-gradient(#fff,#ddd);
  border-radius: 50%;
  box-shadow: inset 0 -2px 4px rgba(0,0,0,0.06);
}
.badge {
  position: absolute;
  right: -6px;
  top: -6px;
  background: #39c6ff;
  color: #fff;
  font-size: 12px;
  padding: 3px 6px;
  border-radius: 12px;
  border: 2px solid white;
}

.menu-toggle {
  display: none;
  width: 44px;
  height: 44px;
  border-radius: 10px;
  background: transparent;
  border: 1px solid rgba(120,80,220,0.12);
  gap:6px;
  padding:8px;
  align-items:center;
  justify-content:center;
}
.menu-toggle span {
  display:block;
  height:2px;
  background:#7a6cff;
  width:18px;
  margin:3px 0;
}

.mobile-overlay {
  display: none;
  position: fixed;
  top: 70px;
  left: 12px;
  right: 12px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 12px 30px rgba(0,0,0,0.12);
  padding: 18px;
}
.mobile-links { list-style:none; margin:0; padding:0; display:flex; flex-direction:column; gap:12px; }
.mobile-links a { text-decoration:none; font-size:18px; color:#222; }

@media (max-width: 900px) {
  .nav-links { display: none; }
  .menu-toggle { display: inline-flex; }
  .brand-icon { width:48px; height:48px; }
  .nav-inner { gap:12px; }
  .mobile-overlay { display: none; }
  .site-nav.open .mobile-overlay { display: block; }
}
</style>
</nav>