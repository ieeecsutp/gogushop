    }

    .badge {
      position: absolute;
      right: -6px;
      top: -6px;
      background: #39c6ff;
      color: #fff;
      font-size: 12px;
      padding: 3px 6px;
      border-radius: 12px;
      border: 2px solid white;
    }
    /* --- Bot√≥n hamburguesa base --- */
    .menu-toggle {
      display: none;
      align-items: center;
      justify-content: center;
      width: 44px;
      height: 44px;
      border-radius: 10px;
      border: 1px solid rgba(120, 80, 220, 0.12);
      background: transparent;
      cursor: pointer;
      transition:
        background 0.3s ease,
        border-color 0.3s ease;
    }

    .menu-toggle:hover {
      background: rgba(180, 150, 255, 0.08);
      border-color: rgba(120, 80, 220, 0.3);
    }

    .menu-icon {
      width: 26px;
      height: 26px;
      transition: transform 0.3s ease;
    }

    .line {
      transition:
        transform 0.3s ease,
        stroke 0.3s ease,
        opacity 0.3s ease;
      transform-origin: center;
      stroke: #7a6cff;
    }

    /* --- Hover sutil y limpio --- */
