  <script>
    (function () {
      const nav = document.querySelector(".site-nav");
      const toggle = nav?.querySelector(".menu-toggle");
      const overlay = nav?.querySelector(".mobile-overlay");
      const anchorLinks = nav?.querySelectorAll('a[href^="#"]') || [];

      if (!nav || !toggle || !overlay) return;

      toggle.addEventListener("click", () => {
        nav.classList.toggle("open");
        overlay.setAttribute(
          "aria-hidden",
          nav.classList.contains("open") ? "false" : "true",
        );
      });

      // Smooth scroll behavior for in-page sections. If the section is not on current page,
      // navigate to root + hash so server will land user on index with hash.
      anchorLinks.forEach((a) => {
        a.addEventListener("click", (e) => {
          const href = a.getAttribute("href");
          if (!href || !href.startsWith("#")) return;
          e.preventDefault();
          const id = href.slice(1);
          const target = document.getElementById(id);

          // close mobile menu
          nav.classList.remove("open");
          overlay.setAttribute("aria-hidden", "true");

          if (target) {
            target.scrollIntoView({ behavior: "smooth", block: "start" });
            // update URL without reloading
            history.replaceState(null, "", "#" + id);
          } else {
            // if not on root, navigate to root + hash to let index handle it
            const isRoot =
              location.pathname === "/" ||
              /index(\.html)?$/.test(location.pathname);
            if (!isRoot) {
              location.href = "/" + href;
            } else {
              // fallback: set hash
              location.hash = href;
            }
          }
        });
      });

      // close overlay when a mobile link (anchor) is clicked (already handled above),
      // also close when clicking outside overlay on mobile
      document.addEventListener("click", (ev) => {
        if (!nav.classList.contains("open")) return;
        const within = ev.target && nav.contains(ev.target as Node);
        if (!within) {
          nav.classList.remove("open");
          overlay.setAttribute("aria-hidden", "true");
        }
      });
    })();
    // Detectar la secci√≥n visible y marcar el enlace activo
    const sections = document.querySelectorAll("section[id]");
    const navLinks = document.querySelectorAll(".nav-links a");

    function activateLinkOnScroll() {
      let current = "";
      sections.forEach((section) => {
        const el = section as HTMLElement;
        const sectionTop = el.offsetTop - 120;
        const sectionHeight = el.clientHeight;
        if (
          window.scrollY >= sectionTop &&
          window.scrollY < sectionTop + sectionHeight
        ) {
          current = el.getAttribute("id") || "";
        }
      });

      navLinks.forEach((link) => {
        link.classList.remove("active");
        if (link.getAttribute("href") === `#${current}`) {
          link.classList.add("active");
        }
      });
    }

    window.addEventListener("scroll", activateLinkOnScroll);
  </script>

  <style is:inline>
    .site-nav {
      background: linear-gradient(
        180deg,
        rgba(255, 255, 255, 0.95),
        rgba(250, 246, 246, 0.95)
