      stroke: #b57cff;
    }

    .menu-toggle:hover .line.top {
      transform: translateY(-1px);
    }

    .menu-toggle:hover .line.bottom {
      transform: translateY(1px);
    }

    /* --- Animaci√≥n al abrir men√∫ (hamburguesa ‚Üí X) --- */
    .site-nav.open .menu-icon .top {
      transform: rotate(45deg) translateY(5px);
    }

    .site-nav.open .menu-icon .middle {
      opacity: 0;
    }

    .site-nav.open .menu-icon .bottom {
      transform: rotate(-45deg) translateY(-5px);
    }
    .mobile-overlay {
      display: none;
