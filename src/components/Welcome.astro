---
import Navbar from "./Navbar.astro";
import "../styles/global.css";
import Albums from "../pages/albums.astro";
---

<div class="text-center text-gray-900">
  <Navbar />
</div>

<main>
  <!-- Sección inicio / hero -->
  <section id="inicio" class="hero">
    <!-- ...existing hero content... -->
  </section>

  <!-- Sección Álbumes -->
  <section
    id="albums"
    class="bg-[#fcfaff] text-center py-20 text-gray-900 font-[Inter]"
  >
    <h2 class="text-3xl font-bold mb-10">Álbumes</h2>
    <Albums />
  </section>

  <!-- Sección Fans -->
  <section id="fans" class="fans-section">
    <h2>Fans</h2>
    <!-- contenido de fans -->
  </section>

  <!-- Sección FAQ -->
  <section id="faq" class="faq-section">
    <h2>FAQ</h2>
    <!-- preguntas frecuentes -->
  </section>

  <section id="contact" class="contact-section">
    <h2>Contacto</h2>
    <!-- formulario de contacto -->
  </section>

  <section id="footer" class="footer-section">
    <h2>Footer</h2>
    <!-- contenido de footer -->
  </section>
</main>
